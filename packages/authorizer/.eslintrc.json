{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": [
      "error"
    ]
  },
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "ignorePatterns": [
    "tests/*"
  ]
}